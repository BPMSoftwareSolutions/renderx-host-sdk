{
  "name": "@renderx-plugins/host-sdk",
  "version": "0.3.0",
  "type": "module",
  "description": "Host SDK for RenderX plugins - provides conductor, event routing, and component mapping APIs",
  "keywords": [
    "renderx",
    "plugin",
    "sdk",
    "host",
    "conductor",
    "component-mapping"
  ],
  "license": "MIT",
  "author": "BPM Software Solutions",
  "repository": {
    "type": "git",
    "url": "https://github.com/BPMSoftwareSolutions/renderx-host-sdk"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean && tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "echo 'Linting passed - no linter configured yet'",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build && npm test",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "@types/node": "^20.0.0",
    "jsdom": "^25.0.0"
  },
  "peerDependencies": {
    "musical-conductor": "*",
    "react": ">=18"
  }
}
